<% title t(:admin_title) %>
<% subtitle t(:admin_subtitle) %>

<% form_tag admin_login_path do %>
  <p>
    <%= label_tag :username, t(:username) %><br />
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password, t(:password) %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t(:login) %></p>
<% end %>

<%= javascript_tag "$('username').focus()" %>