<% title t(:editing, :object=>t(:user)) %>
<% subtitle t('users.message.edit') %>

<% semantic_form_for [:admin,@user] do |f| %>
	<% f.inputs do %>
		<%= f.input :username, :label => t(:username) %>
		<%= f.input :email, :label => t(:email_address) %>
		<%= f.input :password, :label => t(:password) %>
		<%= f.input :password_confirmation, :label => t(:password_confirmation) %>
	<% end %>
	<% f.buttons do %>
		<%= f.commit_button t(:update) %>
	<% end %>	
<% end %>

<div id="links">
	<%= link_to t(:show), @user %>
	<%= link_to t(:delete), admin_user_path( @user ), :method=>:delete, :confirm=>t('message.sure?') %>
	<%= link_to t(:listing, :object=>t('users.title')), admin_users_path %>
</div>