<% title t('change_password',:name=>@user.username) %>
<% subtitle "" %>

<% semantic_form_for @user, :url => update_password_user_path( @user ), :method => :put do |f| -%>
  <% f.inputs do %>
  	<%= hidden_field_tag :token, @token %>
  	<%= f.input :password, :label => t( 'new_password' ) %>
  	<%= f.input :password_confirmation, :label => t( 'new_password_confirmation' ) %>
  <% end %>
  <% f.buttons do %>
  	<%= f.commit_button t('change') %>
  <% end %>
<% end -%>

