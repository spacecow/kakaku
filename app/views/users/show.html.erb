<% title @user.username %>
<% subtitle t('users.message.show') %>

<div id="bottom_links">
	<%= link_to t(:edit), edit_admin_user_path( @user ) if can? :edit, @user %>
	<%= link_to t(:delete), admin_user_path( @user ), :method=>:delete, :confirm=>t('message.sure?') if can? :destroy, @user %>
	<%= link_to t(:list, :object=>t('users.title')), admin_users_path if can? :index, User %>
</div>